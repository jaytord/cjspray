package cfm.core.events
{
	import flash.events.Event;

	public class CFM_DropdownMenuEvent extends Event
	{
		public static const ITEM_SELECTED:String = "itemSelected";
		public static const OPEN_MENU:String = "openMenu";
		public static const CLEAR_SELECTION:String = "clearSelection";
		
		public var id:Number;
		public var value:String;
		public var currentSelection:String;
		
		public function CFM_DropdownMenuEvent(type:String, _id:Number, _value:String, _currentSelection:String, bubbles:Boolean=false, cancelable:Boolean=false)
		{
			super(type, bubbles, cancelable);
			
			id = _id;
			value = _value;
			currentSelection = _currentSelection;
		}
		
	}
}